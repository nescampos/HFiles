<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HFiles</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HFiles.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="page-wrapper">

			<!-- Header -->
				<div id="header-wrapper">
					<div id="header" class="container">

						<!-- Logo -->
							<h1 id="logo"><a href="@Url.Action("Index","Home")">HFiles</a></h1>

						<!-- Nav -->
							<nav id="nav">
								<ul>
									<li><a href="@Url.Action("Index","Profile")">Profile</a></li>
									<li><a href="@Url.Action("Index","Files")">My Files</a></li>
									<li class="break">
										@if(!User.Identity.IsAuthenticated)
										{
											<a asp-area="Identity" asp-page="/Account/Login" id="loginMenu">Register/Login</a>
										}
										@if(User.Identity.IsAuthenticated)
										{
											<li>
												<form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
													<button  type="submit">Logout</button>
												</form>
											</li>
										}
									
								</ul>
							</nav>

					</div>

					<!-- Hero -->
						<section id="hero" class="container">
							@await RenderSectionAsync("Header", required: false)
							
						</section>

				</div>

			<!-- Features 1 -->
				@RenderBody()

			<!-- Footer -->
				<div id="footer-wrapper">
					<div id="footer" class="container">
						<header class="major">
							<h2>HFiles</h2>
							<p>HFiles is a decentralized files manager connected to the Hedera network.</p>
						</header>
						
					</div>
					<div id="copyright" class="container">
						<ul class="menu">
							<li>&copy; HFiles. All rights reserved.</li>
						</ul>
					</div>
				</div>

		</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/util.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>